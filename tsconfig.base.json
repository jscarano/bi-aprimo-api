{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@bi/shared/aprimo-client": ["libs/shared/aprimo-client/src/index.ts"],
      "@bi/utils/asc-common": ["libs/utils/asc-common/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp", "jest.preset.ts", "jest.config.ts"]
}
